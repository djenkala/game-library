<a href="games/new">Create Game</a>
<a href="/logout">Logout</a>
<h1><%= current_user.email %>'s Games</h1>

<% @games.each do |game| %>
  <a href="/games/<%= game.id %>"><%= game.title %></a><br />
  <%= game.genre %><br />
  <input type="button" value="Remove" action="/games/delete" method="POST" />
  <hr />
<% end %>
